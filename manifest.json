{
	"manifest_version": 3,
	"name": "babysclockextension",
	"description": "Shows a clock via Chrome extension",
	"version": "1.0",
	"action": {
		"default_popup": "index.html",
		"default_icon": "img/icon.png"
	},
	"icons": {
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"web_accessible_resources": [
    {
      "resources": [
        "img/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}