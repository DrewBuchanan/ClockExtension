{
	"manifest_version": 3,
	"name": "Clock extension",
	"description": "Shows a clock via Chrome extension",
	"version": "1.0",
	"side_panel" : { "default_path": "index.html"}, 
	"icons": {
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},
	"web_accessible_resources": [
    {
      "resources": [
        "img/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions" : ["sidePanel"]
}